<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20230205193250-1" author="Mateus Padovan Pereira">
        <createTable tableName="contributor_competency">
            <column name="id_contributor" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_contributor_competency_id_contributor"
                             references="contributor(id)"></constraints>
            </column>
            <column name="id_competency" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_contributor_competency_id_competency"
                             references="competency(id)"></constraints>
            </column>
            <column name="id_level_competency" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_contributor_competency_id_level_competency"
                             references="level_competency(id)"></constraints>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230205195935-2" author="Mateus Padovan Pereira">
        <addPrimaryKey tableName="contributor_competency"
                       columnNames="id_contributor, id_competency, id_level_competency"
                       constraintName="pk_contributor_competency"
                       validate="true"></addPrimaryKey>
    </changeSet>

</databaseChangeLog>