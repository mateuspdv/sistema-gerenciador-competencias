<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20221224115545-1" author="Mateus Padovan Pereira">
        <createTable tableName="contributor">
            <column name="id" type="bigint">
                <constraints primaryKey="true"></constraints>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="cpf" type="varchar(11)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="photo" type="varbinary">
                <constraints nullable="true"></constraints>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="false"></constraints>
            </column>
            <column name="admission_date" type="date">
                <constraints nullable="false"></constraints>
            </column>
            <column name="id_seniority" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_contributor_id_seniority"
                             references="seniority(id)"></constraints>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20221224180545-2" author="Mateus Padovan Pereira">
        <createSequence sequenceName="sequence_contributor"
                        dataType="bigint"
                        startValue="1"
                        incrementBy="1"></createSequence>
    </changeSet>

</databaseChangeLog>